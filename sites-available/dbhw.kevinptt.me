server {
  listen [::]:80;
  listen 80;

  server_name dbhw.kevinptt.me;

  root /var/www/dbhw.kevinptt.me/dist;

  charset utf-8;

  location / {
    index index.php index.html index.htm;
    try_files $uri $uri/ =404;
  }

  error_page 404 /40x.html;

  include h5bp/basic.conf;
  include h5bp/location/php.conf;
}
