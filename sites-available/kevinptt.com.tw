server {
  listen [::]:80;
  listen 80;
  server_name www.kevinptt.com.tw;
  return 301 $scheme://kevinptt.com.tw$request_uri;
}

server {
  listen [::]:80 default_server;
  listen 80 default_server;
  server_name kevinptt.com.tw;
  return 301 https://kevinptt.com.tw$request_uri;
}

server {
  listen 443 default_server ssl;
  server_name kevinptt.com.tw;
  root /var/www/kevinptt.com.tw;

  # Specify a charset
  charset utf-8;

  location / {
    index index.php index.html index.htm;
    try_files $uri $uri/ =404;
  }

  error_page 404 /40x.html;

  include h5bp/basic.conf;

  include h5bp/location/phpMyAdmin.conf;
  include h5bp/location/userdir.conf;
  include h5bp/location/php.conf;
  include h5bp/location/dehydrated.conf;

  ssl_certificate /etc/dehydrated/certs/kevinptt.com.tw/fullchain.pem;
  ssl_certificate_key /etc/dehydrated/certs/kevinptt.com.tw/privkey.pem;
}
